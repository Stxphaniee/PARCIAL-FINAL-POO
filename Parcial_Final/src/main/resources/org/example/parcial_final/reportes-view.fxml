<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.parcial_final.ReportesViewController">
    <top>
        <HBox alignment="TOP_RIGHT" BorderPane.alignment="TOP_RIGHT">
            <Button fx:id="btnRegresar" mnemonicParsing="false" prefHeight="35" prefWidth="100" text="Regresar">
                <font>
                    <Font size="13.0" />
                </font>
                <HBox.margin>
                    <Insets right="62.0" top="54.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="-10.0" />
            </padding>
            <Label text="Ver Reportes">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <ComboBox fx:id="tipoReporteComboBox" promptText="Seleccione Tipo de Reporte" />
            <ListView fx:id="reportesListView" prefHeight="200.0" prefWidth="400.0" />
            <Button fx:id="btnVerReporte" text="Ver Reporte">
                <font>
                    <Font size="13.0" />
                </font>
            </Button>
        </VBox>
    </center>
</BorderPane>
