<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@estilos.css" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.parcial_final.TarjetaController">
    <top>
        <HBox alignment="TOP_RIGHT" prefHeight="37.0" prefWidth="394.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnRegresar" mnemonicParsing="false" prefHeight="35" prefWidth="100" styleClass="btn-salir" text="Regresar">
                    <font>
                        <Font size="13.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="60.0" top="52.0" />
                    </HBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="-10.0" />
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" fillWidth="false" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="-30.0" />
            </padding>
            <children>
                <Label text="Agregar Tarjeta" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="clienteIdField" prefHeight="35" prefWidth="400" promptText="ID del Cliente" />
                <TextField fx:id="numeroTarjetaField" prefHeight="35" prefWidth="400" promptText="XXXX XXXX XXXX XXXX" />
                <TextField fx:id="fechaExpiracionField" prefHeight="35" prefWidth="400" promptText="Fecha de Expiración (YYYY-MM-DD)" />
                <TextField fx:id="tipoTarjetaField" prefHeight="35" prefWidth="400" promptText="Tipo de Tarjeta (Crédito/Débito)" />
                <TextField fx:id="facilitadorField" prefHeight="35" prefWidth="400" promptText="Facilitador (Visa, MasterCard, etc.)" />
                <TextField fx:id="saldoInicialField" prefHeight="35" prefWidth="400" promptText="Monto Inicial"/>

                <Button fx:id="btnAgregar" text="Agregar">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
