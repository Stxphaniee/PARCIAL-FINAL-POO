<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" fillWidth="false" spacing="15" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.parcial_final.ServicioController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Añadir Cliente" textFill="#fffefe">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="nombreField" prefHeight="35" prefWidth="400" promptText="Nombres" />
    <TextField fx:id="apellidoField" prefHeight="35" prefWidth="400" promptText="Apellidos " />
    <TextField fx:id="direccionField" prefHeight="35" prefWidth="400" promptText="Dirección" />
    <TextField fx:id="telefonoField" prefHeight="35" prefWidth="400" promptText="Número de Teléfono" />
    <Button fx:id="btnAnadir" text="Añadir">
        <font>
            <Font size="13.0" />
        </font>
    </Button>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnAgregarTarjeta" text="Agregar Tarjeta">
            <font>
                <Font size="13.0" />
            </font>
        </Button>
        <Button fx:id="btnReporteA" text="Generar Reporte A">
            <font>
                <Font size="13.0" />
            </font>
        </Button>
        <Button fx:id="btnReporteB" text="Generar Reporte B">
            <font>
                <Font size="13.0" />
            </font>
        </Button>
    </HBox>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnReporteC" text="Generar Reporte C">
            <font>
                <Font size="13.0" />
            </font>
        </Button>
        <Button fx:id="btnReporteD" text="Generar Reporte D">
            <font>
                <Font size="13.0" />
            </font>
        </Button>
        <Button fx:id="btnEditarInfo" text="Editar Información">
            <font>
                <Font size="13.0" />
            </font>
        </Button>
    </HBox>

    <Button fx:id="btnVolver" styleClass="btn-salir" text="Volver al Menú Principal">
        <font>
            <Font size="13.0" />
        </font>
    </Button>
</VBox>
