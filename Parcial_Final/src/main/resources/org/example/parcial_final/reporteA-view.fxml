<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.parcial_final.ReporteAController">
    <top>
        <HBox alignment="TOP_RIGHT" BorderPane.alignment="TOP_RIGHT">
            <children>
                <Button fx:id="btnRegresar" mnemonicParsing="false" prefHeight="35" prefWidth="100" styleClass="btn-salir" text="Regresar">
                    <font>
                        <Font size="13.0" />
                    </font>
               <HBox.margin>
                  <Insets right="62.0" top="54.0" />
               </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" fillWidth="false" spacing="15">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="-20.0" />
            </padding>
            <children>
                <Label text="Generar Reporte A" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="clienteIdField" prefHeight="35" prefWidth="400" promptText="ID del Cliente" />
                <DatePicker fx:id="inicioField" prefHeight="35" prefWidth="125" promptText="Fecha Inicio" />
                <DatePicker fx:id="finField" prefHeight="35" prefWidth="125" promptText="Fecha Fin" />
                <Button fx:id="btnGenerar" text="Generar Reporte">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>
