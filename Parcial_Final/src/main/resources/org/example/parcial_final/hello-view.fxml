<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.parcial_final.HelloController">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <Label text="Añadir Cliente"/>
  <TextField fx:id="nombreField" promptText="Nombre Completo"/>
  <TextField fx:id="direccionField" promptText="Dirección"/>
  <TextField fx:id="telefonoField" promptText="Número de Teléfono"/>
  <Button text="Añadir" onAction="#onAddButtonClick"/>
</VBox>
