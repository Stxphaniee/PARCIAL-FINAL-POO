<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.parcial_final.EditarInformacionController">
    <center>
        <VBox alignment="CENTER" fillWidth="false" spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" />
            </padding>
            <HBox alignment="CENTER" prefHeight="39.0" prefWidth="1200.0" spacing="15.0">
                <Label prefHeight="20.0" prefWidth="132.0" text="Editar Información" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
               <HBox.margin>
                  <Insets left="455.0" top="40.0" />
               </HBox.margin>
                </Label>
                <Button fx:id="btnRegresar" prefHeight="35" prefWidth="100" styleClass="btn-salir" text="Regresar">
                    <font>
                        <Font size="13.0" />
                    </font>
               <HBox.margin>
                  <Insets left="350.0" top="25.0" />
               </HBox.margin>
                </Button>
            </HBox>
            <TextField fx:id="idClienteField" prefHeight="35" prefWidth="400" promptText="ID del Cliente" />
            <Button fx:id="btnBuscar" prefHeight="35" prefWidth="100" text="Buscar">
                <font>
                    <Font size="13.0" />
                </font>
            </Button>
            <TextField fx:id="nombreField" prefHeight="35" prefWidth="400" promptText="Nombre Completo" />
            <TextField fx:id="apellidoField" prefHeight="35" prefWidth="400" promptText="Apellido" />
            <TextField fx:id="telefonoField" prefHeight="35" prefWidth="400" promptText="Número de Teléfono" />
            <TextField fx:id="direccionField" prefHeight="35" prefWidth="400" promptText="Dirección" />
            <TextField fx:id="fechaExpiracionField" prefHeight="35" prefWidth="400" promptText="Fecha de Expiración (YYYY-MM-DD)" />
            <TextField fx:id="saldoField" prefHeight="35" prefWidth="400" promptText="Saldo" />
            <Button fx:id="btnActualizar" text="Actualizar">
                <font>
                    <Font size="13.0" />
                </font>
            </Button>
            <Button fx:id="btnEliminar" prefHeight="35" prefWidth="150" styleClass="btn-salir" text="Eliminar Cliente">
            <font>
               <Font size="13.0" />
            </font></Button>
        </VBox>
    </center>
</BorderPane>
